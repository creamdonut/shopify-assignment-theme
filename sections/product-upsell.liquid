    }
  ]
}
{% endschema %}

{% for setting in section.settings %}
  {% assign product = all_products[setting.id] %}
  {% if product %}
    {% include 'product-upselling',
      title: product.title,
      desciprion: product.description,
      url: product.url,
      image: product.images.first
    %}
  {% endif %}
{% endfor %}
