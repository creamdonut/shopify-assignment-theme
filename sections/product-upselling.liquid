{% schema %}
{
  "name": "Product Upselling Block",
  "settings": [
    {
      "type": "product",
      "id": "product_1",
      "label": "Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Product 2"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Product 3"
    }
  ]
}
{% endschema %}

{% for setting in section.settings %}
  {% assign product = all_products[setting.id] %}
  {% if product %}
    <div class="product-upsell-item">
      <h2>{{ product.title }}</h2>
      <img src="{{ product.images.first | img_url: 'medium' }}" alt="{{ product.title }}">
      <p>{{ product.description }}</p>
      <a href="{{ product.url }}">View Product</a>
    </div>
  {% endif %}
{% endfor %}
